generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}


datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}


model Jugadores {
  id              Int        @id @default(autoincrement())
  nombre          String
  apellido        String
  dni             String @unique
  celular         String 
  celularEmergencia String
  fechaNacimiento String
  categoria Categorias  
  cuotas Cuotas[]

  @@map("jugadores")
}

