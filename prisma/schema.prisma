enum Categorias{
  C7
  C9
  C11
  C13
  C15
  C17
  C19
  C20
  PRIMERA
  SENIOR
  VETERANO
}

model Cuotas {
  id          Int        @id @default(autoincrement())
  mes         String
  monto       Int
  fechaPago   String
  jugador     Jugadores? @relation(fields: [jugadorId], references: [id],onDelete: Cascade, onUpdate: Cascade) 
  jugadorId   Int       
  comprobantePago String
  
  @@map("cuotas")
}
