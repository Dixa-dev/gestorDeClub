generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}


datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}


model Jugadores {
  id              Int        @id @default(autoincrement())
  nombre          String
  apellido        String
  dni             String @unique
  celular         String 
  celularEmergencia String
  fechaNacimiento String
  categoria Categorias  
  cuotas Cuotas[]

  @@map("jugadores")
}




model Cuotas {
  id          Int        @id @default(autoincrement())
  mes         String
  monto       Int 
  fechaPago   String
  jugador     Jugadores? @relation(fields: [jugadorId], references: [id],onDelete: Cascade, onUpdate: Cascade) 
  jugadorId   Int       
  comprobantePago String @unique
  
  
  @@map("cuotas")
}

model Administracion {
  
  id Int @id @default(autoincrement())
  recaudacionEntadas Int
  recaudacionEstacionamiento Int
  gastos Gastos[]

  @@map("administracion")
}

model Gastos {
  id              Int            @id @default(autoincrement())
  descripcion     String    
  monto           Int
  administracion  Administracion @relation(fields: [administracionId], references: [id])
  administracionId Int

  @@map("gastos")
}

model Usuarios {

  id              Int        @id @default(autoincrement())
  nombre          String
  password       String  
  role UsuarioRoles 

  @@map("usuarios")
}

enum Categorias{
  C7
  C9
  C11
  C13
  C15
  C17
  C19
  C20
  PRIMERA
  SENIOR
  VETERANO
}


enum UsuarioRoles{
  ADMIN
  COBRADOR 
  SUPER
}